termcapinfo xterm* ti@:te@
# Turn off that annoying start up message
startup_message off

#Increase scrollback size to 10000 lines
defscrollback 10000

# Turn the even more annoying whole-screen-flash-on-tab-complete "feature"
vbell off

# Window list at the bottom. hostname, centered tabs and redmarked active windows:
hardstatus alwayslastline
hardstatus string '%{= kw}[ %{= kB}%H%{= kw} ][%= %{= kw}%?%-Lw%?%{= kW}%n*%f %t%?%?%{= kw}%?%+Lw%?%?%= ]%{w}[%{r} %Y-%m-%d %C %A %{w}]%{w}'

defutf8 on
nonblock on

# F6/F7 to go forwards/backwards a window
bindkey -k k6 prev
bindkey -k k7 next
